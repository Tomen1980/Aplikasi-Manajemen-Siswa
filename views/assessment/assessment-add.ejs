<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navbar.ejs') %>
    <div class="container">
        <div class="row">
            <%- include('../includes/menu.ejs') %>
            <!-- content -->
            <div class="col-md-9">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <% if (edit) { %>
                         Edit Data
                        <% }else{ %>
                            Tambah Data
                        <% } %> 
                    </div>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-md-8">                             
                                    <% if(message){%> 
                                        <div class="alert alert-warning" role="alert">
                                                <%= message %> 
                                          </div>
                                        <% } %>                                    
            <form action=" <% if(edit){%>/assessment-edit<%}else{%>/assessment-add<%}%>  " method="POST">
                <%- include("../csrf/csrf.ejs") %> 
                    <div class="form-group">
                        <label for="email" class="control-label col-md-3">Nik</label>
                        <div class="col-md-8">
                            <select name="student_id" class="form-control">
                                <option selected value="<%= edit === true ? asessment.student.id : "" %>"><%= edit === true ? asessment.student.nik : ""%>-<%=  edit === true ? asessment.student.name : "" %></option>                                
                                <% for( let students of student ) { %>                                
                                    <option value="<%= students.id %>"><%=students.nik%>-<%=students.name%></option>                                
                                <% } %>
                        </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="control-label col-md-3">Score</label>
                        <div class="col-md-8">
                            <input type="number" value="<%= asessment.score %>"name="score" id="score" class="form-control">
                            <input type="hidden" value="<%= asessment.id %> " name="id">                                       
                        </div>
                    </div>
                </div>

    </div>
</div>
</div>

<div class="panel-footer">
<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <button type="submit" class="btn btn-primary"><%= edit === true ? "Edit" : "Submit" %> </button>
                <a href="/assessment" class="btn btn-default">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>

                <!-- content -->
                <%- include('../includes/footer.ejs') %>